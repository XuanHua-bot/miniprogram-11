/* 图片上传、展示 */
.img-list {
  display: flex;
  gap: 18rpx;
  margin-top: 10rpx;
  margin-bottom: 16rpx;
}

.img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  object-fit: cover;
  background: #f5f5f5;
}

.img-add {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  background: #fff;
  color: #e54d42;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  border: 1rpx dashed #e54d42;
  cursor: pointer;
}

/* scroll-view 统一高度和内边距 */
.scroll-area {
  height: calc(100vh - 220rpx);
  padding-bottom: 24rpx;
}

/* 统一标题、描述、间距 */
.desc {
  color: var(--text-color-lighter);
  font-size: 24rpx;
  margin-bottom: 16rpx;
} 
