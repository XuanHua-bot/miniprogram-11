/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.header {
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  margin: 10rpx 0 6rpx 0;
  color: var(--text-color);
}

.container {
  padding: 0;
}

/* 自定义导航栏 */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 180rpx;
  background: var(--primary-color);
  color: #fff;
  z-index: 100;
  display: flex;
  align-items: flex-end;
  padding: 0 30rpx 20rpx;
}

.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background-color: #ffffff;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  border-bottom: 1rpx solid #eeeeee;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.nav-right {
  display: flex;
  align-items: center;
}

.nav-icon {
  font-size: 40rpx;
  margin-left: 30rpx;
}

/* 搜索栏 */
.search-bar {
  position: sticky;
  top: 0;
  z-index: 100;
  background-color: #ffffff;
  padding: 20rpx 30rpx;
}

.search-input {
  display: flex;
  align-items: center;
  height: 72rpx;
  background-color: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 30rpx;
}

.search-input icon {
  margin-right: 10rpx;
}

.search-input input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #333333;
}

.placeholder {
  color: #999;
  font-size: 28rpx;
}

.category-bar {
  background-color: #ffffff;
  padding: 20rpx 0;
  white-space: nowrap;
  display: flex;
}

.category-item {
  display: inline-block;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #666666;
  position: relative;
}

.category-item.active {
  color: #07c160;
  font-weight: bold;
}

.category-item.active::after {
  content: '';
  position: absolute;
  left: 50%;
  bottom: -10rpx;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #07c160;
  border-radius: 2rpx;
}

/* 商品列表 */
.product-list {
  height: calc(100vh - 200rpx);
  padding: 0 30rpx;
}

.product-item {
  background-color: #ffffff;
  border-radius: 8rpx;
  padding: 20rpx;
  display: flex;
  margin-bottom: 20rpx;
}

.product-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20rpx;
}

.product-title {
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 10rpx;
  display: block;
}

.product-price {
  font-size: 36rpx;
  color: #ff4d4f;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.product-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999999;
}

.product-location {
  display: flex;
  align-items: center;
}

.location-icon {
  font-size: 24rpx;
  margin-right: 6rpx;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 30rpx;
  color: #999999;
  font-size: 28rpx;
}

/* 空状态 */
.no-data {
  text-align: center;
  padding: 100rpx 30rpx;
  color: #999999;
  font-size: 28rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.init-btn {
  display: inline-block;
  padding: 20rpx 40rpx;
  background: var(--primary-color);
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
}

/* 加载完成 */
.no-more {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 28rpx;
}

/* 悬浮按钮 */
.publish-btn {
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #07c160;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(7, 193, 96, 0.3);
}

.publish-btn .icon {
  color: #ffffff;
  font-size: 48rpx;
  font-weight: bold;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx var(--shadow-color);
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.price {
  color: #e54d42;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 6rpx;
}

.tag {
  margin-bottom: 6rpx;
}

.subtitle {
  font-size: 26rpx;
  color: var(--text-color-light);
  margin-bottom: 6rpx;
}

.scroll-area {
  height: calc(100vh - 220rpx);
  padding-bottom: 24rpx;
}
