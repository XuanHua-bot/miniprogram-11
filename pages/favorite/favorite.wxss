.container {
  padding: 0;
}

/* 顶部标签页 */
.tabs {
  position: sticky;
  top: 0;
  z-index: 100;
  display: flex;
  background: #fff;
  padding: 0 30rpx;
  border-bottom: 2rpx solid var(--border-color);
}

.tab {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: var(--text-color);
  position: relative;
}

.tab.active {
  color: var(--primary-color);
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: -2rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: var(--primary-color);
  border-radius: 2rpx;
}

/* 商品列表 */
.product-list {
  padding: 30rpx;
}

.product-item {
  display: flex;
  padding: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.product-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  background-color: #f5f5f5;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-color);
  margin-bottom: 12rpx;
}

.product-price {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--primary-color);
  margin-bottom: 12rpx;
}

.product-meta {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: var(--text-color-lighter);
}

.product-location {
  margin-right: 20rpx;
}

.product-time {
  flex: 1;
}

/* 操作按钮 */
.action-bar {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
  gap: 20rpx;
}

.action-btn {
  padding: 12rpx 24rpx;
  border-radius: 6rpx;
  font-size: 26rpx;
}

.btn-primary {
  background: var(--primary-color);
  color: #fff;
}

.btn-outline {
  border: 2rpx solid var(--border-color);
  color: var(--text-color);
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  color: var(--text-color-lighter);
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-color-lighter);
}

/* 加载更多 */
.loading {
  text-align: center;
  padding: 30rpx 0;
  color: var(--text-color-lighter);
  font-size: 24rpx;
}

/* 删除确认弹窗 */
.delete-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-content {
  width: 560rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 40rpx;
}

.delete-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-color);
  text-align: center;
  margin-bottom: 30rpx;
}

.delete-buttons {
  display: flex;
  gap: 20rpx;
}

.delete-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cancel-btn {
  background: var(--background-color);
  color: var(--text-color);
}

.confirm-btn {
  background: var(--primary-color);
  color: #fff;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx var(--shadow-color);
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  margin: 10rpx 0 6rpx 0;
  color: var(--text-color);
}

.price {
  color: #e54d42;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 6rpx;
}

.tag {
  margin-bottom: 6rpx;
}

.subtitle {
  font-size: 26rpx;
  color: var(--text-color-light);
  margin-bottom: 6rpx;
}

.btn {
  margin-top: 10rpx;
}

.scroll-area {
  height: calc(100vh - 220rpx);
  padding-bottom: 24rpx;
} 