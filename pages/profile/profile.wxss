.container {
  padding: 0;
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(to right, var(--primary-color), var(--primary-light));
  padding: 60rpx 30rpx;
  color: #fff;
  position: relative;
}

/* 用户信息 */
.user-info {
  background-color: #ffffff;
  padding: 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.info {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
  display: block;
}

.id {
  font-size: 24rpx;
  color: #999999;
}

.actions {
  display: flex;
  gap: 20rpx;
}

.edit-btn, .logout-btn, .login-btn {
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  margin: 0;
}

.edit-btn {
  background-color: #07c160;
  color: #ffffff;
}

.logout-btn {
  background-color: #f5f5f5;
  color: #666666;
}

.login-btn {
  background-color: #07c160;
  color: #ffffff;
  width: 100%;
}

.product-tabs {
  display: flex;
  background-color: #ffffff;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}

.tab {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666666;
  position: relative;
}

.tab.active {
  color: #07c160;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #07c160;
  border-radius: 2rpx;
}

.product-list {
  padding: 0 30rpx;
}

.product-item {
  background-color: #ffffff;
  border-radius: 8rpx;
  padding: 20rpx;
  display: flex;
  margin-bottom: 20rpx;
}

.product-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20rpx;
}

.product-title {
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 10rpx;
  display: block;
}

.product-price {
  font-size: 36rpx;
  color: #ff4d4f;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.product-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999999;
}

.loading {
  text-align: center;
  padding: 30rpx;
  color: #999999;
  font-size: 28rpx;
}

.no-data {
  text-align: center;
  padding: 100rpx 30rpx;
  color: #999999;
  font-size: 28rpx;
}

/* 数据统计 */
.stats {
  display: flex;
  background: #fff;
  padding: 30rpx 0;
  margin-bottom: 20rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
  position: relative;
}

.stat-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 2rpx;
  height: 40rpx;
  background: var(--border-color);
}

.stat-num {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-color);
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: var(--text-color-lighter);
}

/* 功能菜单 */
.menu-list {
  background: #fff;
  margin-bottom: 20rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-color);
}

.menu-arrow {
  color: var(--text-color-lighter);
  font-size: 28rpx;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 30rpx;
  color: var(--text-color-lighter);
  font-size: 24rpx;
}

/* 编辑资料弹窗 */
.edit-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.edit-content {
  width: 600rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 40rpx;
}

.edit-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-color);
  text-align: center;
  margin-bottom: 30rpx;
}

.edit-form {
  margin-bottom: 30rpx;
}

.form-item {
  margin-bottom: 20rpx;
}

.form-label {
  font-size: 28rpx;
  color: var(--text-color);
  margin-bottom: 10rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 30rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  font-size: 28rpx;
  color: var(--text-color);
  background: #fff;
  box-sizing: border-box;
}

.edit-buttons {
  display: flex;
  gap: 20rpx;
}

.edit-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cancel-btn {
  background: var(--background-color);
  color: var(--text-color);
}

.save-btn {
  background: var(--primary-color);
  color: #fff;
}

.section {
  background: #fff;
  padding: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.product-list {
  width: 100%;
}

.product-item {
  display: flex;
  padding: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.product-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.product-price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: bold;
  margin: 10rpx 0;
}

.product-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-actions {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  display: flex;
}

.action-btn {
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  border-radius: 6rpx;
  margin-left: 20rpx;
}

.action-btn.edit {
  background: #1296db;
  color: #fff;
}

.action-btn.delete {
  background: #ff4d4f;
  color: #fff;
}

.loading, .empty {
  text-align: center;
  padding: 40rpx;
  color: #999;
} 