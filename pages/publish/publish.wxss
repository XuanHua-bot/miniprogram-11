.container {
  min-height: 100vh;
  background-color: #f7f7f7;
  padding: 20rpx;
  padding-bottom: 40rpx;
}

/* 表单样式 */
.form-group {
  background-color: #ffffff;
  border-radius: 8rpx;
  padding: 0 30rpx;
  margin-bottom: 24rpx;
}

.form-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 20rpx;
}

.input {
  width: 100%;
  height: 88rpx;
  background: #fff;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: var(--text-color);
  box-sizing: border-box;
  border: 1rpx solid var(--border-color);
}

.form-textarea {
  width: 100%;
  height: 200rpx;
  font-size: 28rpx;
  color: #333333;
  line-height: 1.5;
}

/* 图片上传 */
.img-list {
  display: flex;
  gap: 16rpx;
  margin-top: 8rpx;
}

.img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  object-fit: cover;
  background: #f5f5f5;
}

.img-add {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  background: #fff;
  color: #e54d42;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  border: 1rpx dashed #e54d42;
  cursor: pointer;
}

/* 分类选择 */
.category-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 20rpx;
}

.category-item {
  padding: 16rpx 30rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: var(--text-color);
  background: var(--background-color);
}

.category-item.active {
  background: var(--primary-color);
  color: #fff;
}

/* 价格输入 */
.price-input {
  display: flex;
  align-items: center;
}

.price-symbol {
  font-size: 32rpx;
  color: var(--text-color);
  margin-right: 10rpx;
}

/* 位置选择 */
.location-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: #fff;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
}

.location-text {
  font-size: 28rpx;
  color: var(--text-color);
}

.location-icon {
  font-size: 32rpx;
  color: var(--text-color-lighter);
}

/* 提交按钮 */
.btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #07c160;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-top: 20rpx;
}

.submit-btn[loading] {
  opacity: 0.8;
}

/* 提示文本 */
.tips {
  font-size: 24rpx;
  color: var(--text-color-lighter);
  margin-top: 10rpx;
}

/* 必填标记 */
.required {
  color: var(--primary-color);
  margin-right: 4rpx;
}

/* 错误提示 */
.error-text {
  font-size: 24rpx;
  color: var(--error-color);
  margin-top: 10rpx;
} 