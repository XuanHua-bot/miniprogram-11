/* 市场页面样式 */
.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 搜索栏 */
.search-bar {
  position: relative;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.search-input {
  background-color: #f5f5f5;
  border-radius: 32rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
}

/* 分类栏 */
.category-bar {
  display: flex;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow-x: scroll;
  white-space: nowrap;
}

.category-item {
  flex-shrink: 0;
  padding: 12rpx 24rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 32rpx;
}

.category-item.active {
  color: #fff;
  background-color: #07c160;
}

/* 商品列表 */
.product-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.product-item {
  width: calc(50% - 20rpx);
  margin: 10rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.product-image {
  width: 100%;
  height: 300rpx;
  background-color: #f5f5f5;
}

.product-info {
  padding: 20rpx;
}

.product-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: block;
  height: 80rpx;
  line-height: 40rpx;
}

.product-price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.product-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}

.no-data {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

/* 排序栏 */
.sort-bar {
  display: flex;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.sort-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.sort-item.active {
  color: #07c160;
}

.sort-item.active::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #07c160;
  border-radius: 2rpx;
}

/* 下拉刷新和上拉加载 */
.refresh-loading {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}

.load-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.filter-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.filter-item.active {
  color: var(--primary-color);
}

.arrow {
  display: inline-block;
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-top: 8rpx solid #999;
  margin-left: 8rpx;
}

.arrow.up {
  border-top: none;
  border-bottom: 8rpx solid var(--primary-color);
}

/* 搜索和筛选栏 */
.filter-bar {
  position: sticky;
  top: 0;
  z-index: 100;
  background: #fff;
  padding: 20rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-box {
  display: flex;
  align-items: center;
  background: var(--background-color);
  border-radius: 8rpx;
  padding: 16rpx 24rpx;
  margin-bottom: 20rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-color);
}

.filter-tabs {
  display: flex;
  border-bottom: 2rpx solid var(--border-color);
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: var(--text-color);
  position: relative;
}

.filter-tab.active {
  color: var(--primary-color);
  font-weight: 500;
}

.filter-tab.active::after {
  content: '';
  position: absolute;
  bottom: -2rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: var(--primary-color);
  border-radius: 2rpx;
}

/* 商品网格 */
.product-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.card {
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx var(--shadow-color);
  padding: 16rpx;
  margin-bottom: 0;
}

.title {
  font-size: 28rpx;
  font-weight: 500;
  margin: 8rpx 0 4rpx 0;
  color: var(--text-color);
}

.price {
  color: #e54d42;
  font-weight: bold;
  font-size: 26rpx;
}

/* 筛选弹窗 */
.filter-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  flex-direction: column;
}

.filter-content {
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 30rpx;
  margin-top: auto;
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.filter-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-color);
}

.filter-close {
  font-size: 40rpx;
  color: var(--text-color-lighter);
}

.filter-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-color);
  margin-bottom: 20rpx;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.filter-option {
  padding: 12rpx 24rpx;
  border-radius: 6rpx;
  font-size: 26rpx;
  color: var(--text-color);
  background: var(--background-color);
}

.filter-option.active {
  background: var(--primary-color);
  color: #fff;
}

.filter-footer {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.filter-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.filter-reset {
  background: var(--background-color);
  color: var(--text-color);
}

.filter-confirm {
  background: var(--primary-color);
  color: #fff;
}

.market-publish-btn {
  margin-left: 24rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 36rpx;
  font-size: 28rpx;
  border-radius: 30rpx;
  align-self: center;
}

.tabs {
  margin-bottom: 20rpx;
}

.scroll-area {
  height: calc(100vh - 220rpx);
  padding-bottom: 24rpx;
} 