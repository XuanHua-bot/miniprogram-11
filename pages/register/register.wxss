.container {
  padding: 50rpx 30rpx;
}

.logo-container {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo {
  font-size: 48rpx;
  font-weight: bold;
  color: #07c160;
}

.form-container {
  padding: 0 20rpx;
}

.input-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.label {
  width: 160rpx;
  font-size: 28rpx;
  color: #333;
}

input {
  flex: 1;
  font-size: 28rpx;
  padding: 10rpx 0;
}

.register-btn {
  margin-top: 80rpx;
  background-color: #07c160;
  color: white;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.register-btn.loading {
  background-color: #999;
}

.login-link {
  text-align: center;
  margin-top: 40rpx;
}

.login-link text {
  color: #07c160;
  font-size: 28rpx;
}  