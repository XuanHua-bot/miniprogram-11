/* pages/register/register.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 0 60rpx;
  background-color: var(--background-color);
}

.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  border-radius: 20rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--primary-color);
}

.form-container {
  width: 100%;
  max-width: 600rpx;
}

.input {
  height: 96rpx;
  padding: 0 30rpx;
  margin-bottom: 32rpx;
  background-color: #fff;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: 1rpx solid var(--border-color);
}

.btn {
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 12rpx;
  text-align: center;
  font-size: 32rpx;
  margin-bottom: 24rpx;
}

.primary-btn {
  background-color: var(--primary-color);
  color: #fff;
}

.link {
  display: block;
  text-align: center;
  color: var(--text-color-light);
  font-size: 26rpx;
  margin-top: 20rpx;
}